baseURL = "http://www.vinayh.com"
title = "Vinay Hiremath"
# for smart copyright line, leave this blank and check [params.copyright]
copyright = ""

theme = "minimo"

disqusShortname = ""
googleAnalytics = ""

Paginate = 10
preserveTaxonomyNames = true

enableRobotsTXT = true # generate robots.txt

# Syntax Highlighting ( https://gohugo.io/content-management/syntax-highlighting/ )
pygmentsCodefences = true

enableEmoji = true

# Missing translations will default to this content language
defaultContentLanguage = "en"

[params.info]
description = "Interests include computer science, neuroscience, transportation, and animal rights"
title404 = "Nothing's here! :("

[params.assets]
favicon = "favicon.ico"
customCSS = ["css/custom.css"]
customJS = ["js/custom.js"]
gopher = "" # used in 404 template ( Generator: https://gopherize.me )

[params.copyright]
prefix = ""
holder = "Vinay Hiremath"
startYear = "2015"
suffix = ""

[params.settings]
# date & time format: https://golang.org/pkg/time/
dateFormat = "02 Jan 2006"
listDateFormat = "Jan 2006"
archiveDateFormat = "Jan 02"
hideEntryNavigation = ["page"] # boolean / array of sections
hideEntryMeta = ["page"] # boolean / array of sections
showReadingTime = true
showLastmod = true
taxonomyCloudShuffle = true
accentColor = "#ffcd00"
hideMainMenu = true
rtl = false

[params.sidebar]
enable = true

[params.widgets]
# header = ["breadcrumbs"]
homepage = ["recent_posts"]
# sidebar = ["about","search","sidebar_menu","taxonomy_cloud"]
sidebar = ["about","sidebar_menu","taxonomy_cloud"]
footer = ["social_menu"]

[sidebar_menu]
title = "Sidebar"
mirror = "sidebar"

[[menu.sidebar]]
    name = "About"
    weight = -120
    identifier = "about"
    url = "/about/"
# [[menu.sidebar]]
#     name = "Tags"
#     weight = -100
#     url = "/tags/"
[[menu.sidebar]]
    name = "Main Site"
    weight = -90
    identifier = "repository"
    url = "https://vinayh.com"

